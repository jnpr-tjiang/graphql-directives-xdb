{
    "compilerOptions": {
        "target": "es6",
        "lib": [
            "dom"
        ],
        "module": "commonjs",
        "declaration": true,
        "outDir": "./lib",
        "rootDir": "src",
        "removeComments": true,
        "strict": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
        "**/__tests__/*"
    ]
}